{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"rootDirs": ["./", "./shared"],
		"outDir": "./dist",
		"strict": true,
		// "sourceMap": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"]
	},
	"include": ["*.ts"],
	"exclude": ["./node_modules"]
}
