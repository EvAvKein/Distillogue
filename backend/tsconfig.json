{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"rootDirs": ["./", "../shared"],
		"outDir": "./dist",
		"strict": true,
		// "sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext"]
	},
	"include": ["*.ts", "src/**/*.ts", "../shared/**/*.ts", "admin/**/*.ts"],
	"exclude": ["./node_modules"]
}
